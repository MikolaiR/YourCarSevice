<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.yourcarsevice.view.LoginAuthFragment"
        android:label="Login"
        tools:layout="@layout/fragment_auth_login">
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_loginFragment_to_partFragment"
            app:destination="@id/partFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.yourcarsevice.view.RegistrationAuthFragment"
        android:label="Registration"
        tools:layout="@layout/fragment_auth_registration">
        <action
            android:id="@+id/action_registrationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registrationFragment_to_partFragment"
            app:destination="@id/partFragment" />
    </fragment>

    <fragment
        android:id="@+id/partFragment"
        android:name="com.example.yourcarsevice.view.PartItemFragment"
        android:label="List parts"
        tools:layout="@layout/fragment_item_party">
        <action
            android:id="@+id/action_partFragment_to_loginFragment2"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_partFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.yourcarsevice.view.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_setting">
        <action
            android:id="@+id/action_settingsFragment_to_partFragment"
            app:destination="@id/partFragment" />
    </fragment>

</navigation>